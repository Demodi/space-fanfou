{
    "content_scripts": [
        {
            "css": [ "styles.css" ],
            "matches": [ "http://fanfou.com/*", "http://fanwai.com/*" ]
        },
        {
            "css": [ "styles/expanding-replies.css" ],
            "js": [ "scripts/jquery-1.5.2.min.js", "scripts/expanding-replies.js" ],
            "matches": [ "http://fanfou.com/*" ],
            "exclude_globs": [
                "http://fanfou.com/",
                "http://fanfou.com/login",
                "http://fanfou.com/finder",
                "http://fanfou.com/search",
                "http://fanfou.com/photo/*",
                "http://fanfou.com/album/*",
                "http://fanfou.com/logout/*",
                "http://fanfou.com/friends/*",
                "http://fanfou.com/settings",
                "http://fanfou.com/settings/*",
                "http://fanfou.com/statuses/*",
                "http://fanfou.com/followers/*",
                "http://fanfou.com/privatemsg",
                "http://fanfou.com/privatemsg/*",
                "http://fanfou.com/advancedsearch"
            ]
        },
        {
            "css": [ "styles/image-uploading.css" ],
            "js": [ "scripts/jquery-1.5.2.min.js", "scripts/image-uploading.js" ],
            "matches": [
                "http://fanfou.com/home",
                "http://fanfou.com/replies",
                "http://fanfou.com/mentions",
                "http://fanfou.com/favorites/*"
            ]
        }
    ],
    "description": "饭否的辅助脚本。可以通过改良 CSS 来优化饭否页面的显示效果，并添加了回复展开、网页端上传图片等脚本功能。",
    "name": "太空饭否",
    "version": "0.3.2.8",
    "permissions": [ "http://fanfou.com/*", "http://fanwai.com/*", "tabs", "notifications" ],
    "icons" : {
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "background_page": "background.html",
    "page_action": {
        "default_icon": "icon.png",
        "default_title": "太空饭否"
    }
}
